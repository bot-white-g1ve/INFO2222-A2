{% extends 'base.jinja' %}


{% block content %} 
   <style>
    nav {
        border-bottom: 1px solid black;
        overflow: auto
    }

    #message_box {
        border: 1px solid black; 
        height: 400px; 
        width: 800px; 
        overflow: auto;
        padding: 2px;
    }

    .text  {
        margin-top: 2px;
        margin-bottom: 2px;
    }

    .sidebar {
        width: 20%;
        margin-left: 20px;
        padding: 10px;
        border-left: 1px solid #ccc;
        float: right;
        position: fixed;
        top: 100px;
        right: 10px;
    }
    .sidebar ul {
        list-style: none;
        padding: 0;
    }

